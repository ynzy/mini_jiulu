.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.container .header {
  background-color: #ffffff;
  position: fixed;
  height: 100rpx;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  width: 750rpx;
  align-items: center;
  z-index: 99;
  /* padding-left:15px;  */
  /* padding-right:5px; */
}
.container .header .search-container {
  display: inline-flex;
  flex-direction: row;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 50px;
  margin-left: 20rpx;
  /* margin-left: */
}
.container .header .search-container .icon {
  width: 14px;
  height: 14px;
  margin-left: 12px;
  margin-right: 8px;
}
.container .header .search-container .bar {
  border-top-right-radius: 15px;
  border-bottom-right-radius: 15px;
  display: inline-block;
  height: 34px;
  /* width:100%; */
  width: 500rpx;
  font-size: 14px;
}
.container .header .search-container .in-bar {
  color: #999;
}
.container .header .search-container .cancel-img {
  width: 14px;
  height: 14px;
  margin-right: 10px;
}
.container .header .cancel {
  line-height: 34px;
  width: 60px;
  /* margin-left:10px; */
  text-align: center;
  display: inline-block;
  border: none;
}
.history {
  display: flex;
  flex-direction: column;
  width: 690rpx;
  margin: 40rpx 0 20rpx 0;
  margin-top: 160rpx;
  font-size: 14px;
}
.history .title {
  line-height: 15px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.history .title .chunk {
  height: 15px;
  width: 5px;
  background-color: #000;
  display: inline-block;
  margin-right: 10px;
}
.history .tags {
  display: flex;
  flex-wrap: wrap;
  margin-top: 24rpx;
  padding-left: 15px;
  width: 630rpx;
}
.history .tags v-tag {
  margin-right: 10px;
  margin-bottom: 10px;
}
.hot-search {
  margin-top: 70rpx;
}
.books-container {
  width: 570rpx;
  margin-top: 100rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 0 90rpx 0 90rpx;
  justify-content: space-between;
}
.books-container v-book {
  margin-bottom: 25rpx;
}
.loading {
  margin: 50rpx 0 50rpx 0;
}
.loading-center {
  position: absolute;
  top: 50%;
  left: 50%;
}
