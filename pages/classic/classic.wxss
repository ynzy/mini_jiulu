.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.container .header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
}
.container .header .episode {
  margin-left: 20rpx;
  margin-top: 4rpx;
}
.container .header .like {
  margin-top: 6rpx;
}
.container .navi {
  position: absolute;
  bottom: 40rpx;
}
