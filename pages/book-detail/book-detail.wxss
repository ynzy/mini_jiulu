.container {
  width: 100%;
  background: #f5f5f5;
}
.container .head {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  background-color: #fff;
}
.container .head image {
  width: 200rpx;
  height: 300rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}
.container .head .title {
  color: #2f2f2f;
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;
}
.container .head .author {
  font-size: 28rpx;
  color: #999;
  /* margin-bottom: 30rpx; */
}
.container .sub-container {
  width: 690rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  background-color: #fff;
  padding: 30rpx;
}
.container .sub-container .comment-container {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  width: 100%;
  padding: 0 30rpx;
}
.container .sub-container .comment-container v-tag {
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}
.container .sub-container .comment-container v-tag .num {
  margin-left: 10rpx;
  font-size: 22rpx;
  color: #aaa;
}
.container .sub-container .comment-container .ex-tag1 {
  background: #f7f273;
}
.container .sub-container .comment-container .ex-tag2 {
  background: #b8e5fc;
}
.container .sub-container .content {
  text-indent: 58rpx;
  font-weight: 500;
}
