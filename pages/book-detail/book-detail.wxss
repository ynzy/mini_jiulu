.container {
  width: 100%;
  background: #f5f5f5;
}
.container .head {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  background-color: #fff;
}
.container .head image {
  width: 200rpx;
  height: 300rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}
.container .head .title {
  color: #2f2f2f;
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;
}
.container .head .author {
  font-size: 28rpx;
  color: #999;
  /* margin-bottom: 30rpx; */
}
.container .sub-container {
  width: 690rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  background-color: #fff;
  padding: 30rpx;
}
.container .sub-container .comment-container {
  padding: 0 30rpx;
}
.container .sub-container .content {
  text-indent: 58rpx;
  font-weight: 500;
}
.container .sub-container .detail-contaner {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-bottom: 100rpx;
  font-size: 28rpx;
  color: #666;
}
.container .sub-container .detail-contaner .vertical {
  display: flex;
  flex-direction: column;
}
.container .sub-container .detail-contaner .vertical .description {
  color: #999;
  margin-right: 30rpx;
}
.container .sub-container .shadow {
  color: #999;
}
.post-container {
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 690rpx;
  height: 100rpx;
  padding: 0 30rpx;
  background-color: #fff;
  box-shadow: 1px -1px 1px #e3e3e3;
  /* z-index: 99; */
}
.post-container .post-fake {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  width: 460rpx;
  border: 1px solid #999;
  border-radius: 15px;
  font-size: 22rpx;
  padding-left: 20rpx;
}
.post-container .like-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.post-container .like-container .like {
  margin-top: 10rpx;
}
.post-container .like-container .share-btn {
  margin-top: 28rpx;
}
.post-container .like-container .share-btn .share {
  /* padding:10rpx; */
  width: 40rpx;
  height: 40rpx;
}
.posting-container {
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 99;
  background-color: #fff;
}
.posting-container .post-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
}
.posting-container .post-header text {
  padding: 25rpx;
}
.posting-container .post-header text:first-child {
  font-size: 28rpx;
  color: #bbb;
}
.posting-container .post-header .cancel {
  color: #666;
}
.posting-container .comment-container {
  padding: 40rpx 30rpx 0 30rpx;
}
.posting-container .post {
  width: 690rpx;
  margin: 30rpx auto;
  height: 56rpx;
  background-color: #f5f5f5;
  border-radius: 15px;
  padding-left: 25rpx;
}
.comment-container {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  width: 100%;
}
.comment-container v-tag {
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}
.comment-container v-tag .num {
  margin-left: 10rpx;
  font-size: 22rpx;
  color: #aaa;
}
.comment-container .ex-tag1 {
  background: #f7f273;
}
.comment-container .ex-tag2 {
  background: #b8e5fc;
}
